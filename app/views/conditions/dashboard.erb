      </tr>
      <tr>
        <th> 85-94 Degrees F </th>
        <th> <%= Condition.average_number_of_rides_in_temperature_range(85) %></th>
        <th> <%= Condition.highest_number_of_rides_in_temperature_range(85) %></th>
        <th> <%= Condition.lowest_number_of_rides_in_temperature_range(85) %></th>
      </tr>
    </table>
    <table class="precipitation">
      <tr>
        <th>Precipitation</th>
        <th> Average Number of Rides: </th>
        <th> Highest Number of Rides: </th>
        <th> Lowest Number of Rides: </th>
      </tr>
      <tr>
        <th> 0 - .49(in)</th>
        <th> <%=Condition.average_number_of_rides_in_precipitation(0)%></th>
        <th> <%=Condition.highest_number_of_rides_in_precipitation_range(0)%></th>
        <th> <%=Condition.lowest_number_of_rides_in_precipitation_range(0)%></th>        
      </tr>
      <tr>
        <th> .5 - .99(in)</th>
      <%if Condition.number_of_days_within_precipitation(0.5) != 0  %>
        <th> <%=Condition.average_number_of_rides_in_precipitation(0.5)%></th>
        <th> <%=Condition.highest_number_of_rides_in_precipitation_range(0.5)%></th>
        <th> <%=Condition.lowest_number_of_rides_in_precipitation_range(0.5)%></th>     
      <% else %>
        <th> <%=0%></th>
        <th> <%=0%></th>
        <th> <%=0%></th>     
      <% end %>
      </tr>
      <tr>
        <th> 1.0 - 1.49(in)</th>
