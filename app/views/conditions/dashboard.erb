      </tr>
      <tr>
        <th>3.5 - 3.99(in)</th>
        <%if Condition.number_of_days_within_precipitation(0.5) != 0  %>
        <th> <%=Condition.average_number_of_rides_in_precipitation(3.5)%></th>
        <th> <%=Condition.highest_number_of_rides_in_precipitation_range(3.5)%></th>
        <th> <%=Condition.lowest_number_of_rides_in_precipitation_range(3.5)%></th>  
         <% else %>
