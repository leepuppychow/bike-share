        <th> <%=Condition.lowest_number_of_rides_in_precipitation_range(1.5)%></th>
        <% else %>
        <th> <%=0%></th>
        <th> <%=0%></th>
        <th> <%=0%></th>     
      <% end %>        
      </tr>
      <tr>
        <th> 2.0 - 2.49 (in)</th>
