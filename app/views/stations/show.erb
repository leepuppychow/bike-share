<head>
  <link rel="stylesheet" type="text/css" href="/reset.css">
  <link rel="stylesheet" type="text/css" href="/station/show.css">
</head>

<body>
  <div class="container">
    <header>
      <h1>Station</h1>
      <nav>
        <ul>
          <li><a href="/stations"> Stations </a></li>
          <li><a href="/stations-dashboard"> Station Dashboard </a></li>
          <li><a href="/">Home</a></li>
        </ul>
      </nav>
    </header>

      <table>
        <tr class="field-name">
          <th>Name:</th>
          <th><%=@station.name%></th>
        </tr>
        <tr class="field-name">
          <th>City:</th>
          <th><%=@station.city%></th>
        </tr>
        <tr class="field-name">
          <th>Dock Count:</th>
          <th><%=@station.dock_count%></th>
        </tr>
        <tr class="field-name">
          <th>Installation Date:</th>
          <th><%=@station.installation_date%></th>
        </tr>
        <tr class="field-name">
          <th >Number of Starting Rides:</th>
          <% if @station.number_of_ending_rides %>
          <th><%= @station.number_of_ending_rides %>
          <% else %>
          0
          <% end %>
          </th>    
        </tr>
        <tr class="field-name">
          <th >Number of Ending Rides:</th>
          <th>
          <% if @station.number_of_starting_rides %>
          <%= @station.number_of_starting_rides %>
          <% else %>
            0
          <% end %>
          </th>
        </tr>
        <tr class="field-name">
          <th >Most Frequent Destination Station:</th>
          <th>
            <% if @station.most_frequent_destination_station %>
            <%= @station.most_frequent_destination_station.last %>
            <% else %>
              No trips
            <% end %>
          </th>
        </tr>
        <tr class="field-name" >
          <th>Most Frequent Origination Station:</th>
          <th>
            <% if @station.most_frequent_origination_station %>
            <%= @station.most_frequent_origination_station.last %>
            <% else %>
            No trips
            <% end %>
          </th>
        </tr>
        <tr class="field-name">
          <th >Date With The Most Trips Started Here:</th>
          <th>
            <% if @station.date_with_most_trips %>
            <%= @station.date_with_most_trips.last %>
            <% else %>
              No trips
            <% end %>
          </th>
        </tr>
        <tr class="field-name">
          <th >Most Frequent Zipcode Starting Here:</th>
          <th>
            <% if @station.most_frequent_zipcode_starting_here %>
            <%= @station.most_frequent_zipcode_starting_here.last %>
            <% else %>
              No trips
            <% end %>
          </th>
        </tr>
        <tr class="field-name">
          <th >Most Frequent Bike ID Starting Here:</th>
          <th>
          <% if @station.most_frequent_bike_id_starting_here %>
            <%= @station.most_frequent_bike_id_starting_here.last %>
            <% else %>
              No trips
            <% end %>
          </th>
        </tr>
        <tr class="field-name">
          <th colspan=2>
            <form action='/stations/<%=@station.id%>' method='POST'>
              <input type='hidden' name='_method' value='DELETE'>
              <button type='submit' class="delete_button">Delete</button>
            </form>
          </th>
        </tr>
      </table>
  </div>
</body>
