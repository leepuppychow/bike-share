<head>
  <link rel="stylesheet" type="text/css" href="/reset.css">
  <link rel="stylesheet" type="text/css" href="/station/new.css">
</head>

<body>

<div class="container">
  <header>
    <h1>New Trip</h1>
    <nav>
      <ul>
        <li><a href="/trips">Trips</a></li>
        <li><a href="/trips-dashboard">Trip Dashboard</a></li>
        <li><a href="/">Home</a></li>
      </ul>
    </nav>
  </header>

  <form action="/trips" method="POST">
    <table>
      <tr>
        <th class="field-name">Trip Duration:</th>
        <th><input type="text" name="trip[duration]"/></th>
      </tr>
      <tr>
        <th class="field-name">Start Date:</th>
        <th><input type="date" name="trip[start_date]"/></th>
      </tr>
      <tr>
        <th class="field-name">Start Station Name:</th>
        <th><input type="text" name="trip[start_station_name]"/></th>
      </tr>
      <tr>
        <th class="field-name">End Station Name:</th>
        <th><input type="text" name="trip[end_station_name]"/></th>
      </tr>
      <tr>
        <th class="field-name">Bike ID:</th>
        <th><input type="number" name="trip[bike_id]"/></th>
      </tr>
      <tr>
        <th class="field-name">Subscription Type:</th>
        <th><input type="text" name="trip[subscription_type]"/></th>
      </tr>
      <tr>
        <th class="field-name">Zip Code:</th>
        <th><input type="text" name="trip[zip_code]"/></th>
      </tr>
      <tr>
        <th colspan=2>
          <input id="submit-button" type="submit"/>
        </th>
      </tr>
    </table>
  </form>
</div>
</body>
